    <servlet-class>web.application.ApplicationInitialization</servlet-class>
    <init-param>
      <param-name>log4j-properties-location</param-name>
      <param-value>/WEB-INF/log4j.properties</param-value>
    </init-param>
    <init-param>
      <param-name>script-location</param-name>
      <param-value>/WEB-INF/script.sh</param-value>
