    <init-param>
      <param-name>result-query-location</param-name>
      <param-value>/home/oracle/sqlfiles/result.html</param-value>
    </init-param>
    <init-param>
      <param-name>dbURL</param-name>
      <param-value>jdbc:oracle:thin:@185.65.246.6:1521:XE</param-value>
    </init-param>
    <init-param>
      <param-name>dbUser</param-name>
      <param-value>kernel32</param-value>
    </init-param>
    <init-param>
      <param-name>dbPassword</param-name>
      <param-value>v0qV0nsktr</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ApplicationInitialization</servlet-name>
    <url-pattern>/ApplicationInitialization</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>QueryServlet</servlet-name>
    <servlet-class>web.application.QueryServlet</servlet-class>
  </servlet>
